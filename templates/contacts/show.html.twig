{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<div class="container-xxl py-5 bg-dark hero-header">
		<div class="container text-center my-5 pt-5 pb-4">
			<h1 class="display-3 text-white mb-3 animated slideInDown">Compte</h1>
			<a href="/logout">
				<i class="fa fa-power-off fa-1x text-primary"></i>
			</a>
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb justify-content-center text-uppercase">
					<li class="breadcrumb-item">
						<a href="/">Acceuil</a>
					</li>
					{% if app.user %}
						<li class="breadcrumb-item text-white active" aria-current="page">{{app.user.prenom}}
							{{app.user.nom}}</li>
					{% endif %}
					<li class="breadcrumb-item text-white active" aria-current="page">Contacts</li>
				</ol>
				{% if app.user %}
					<p class="">{{app.user.email}}</p>
				{% endif %}
			</nav>
		</div>
	</div>

	<div class="container-xxl pb-5 px-0 wow fadeInUp" data-wow-delay="0.1s" id="">
		<div class="row g-0">
			<div class="col-lg-6">
				<div class="imagelogin">
					<span></span>
				</div>
			</div>
			<div class="col-lg-6 bg-dark d-flex align-items-center">
				<div class="p-5 col-12 wow fadeInUp" data-wow-delay="0.2s">
					<h5 class="section-title ff-secondary text-start text-primary fw-normal">Consultation</h5>
					<h1 class="text-white mb-4">Message</h1>
					<div class="row g-3">
						<div class="col-md-6">
							<div class="form-floating">
								<input type="text" value="{{contact.nom}}" class="form-control" id="name" placeholder="Nom complet">
								<label for="name">Prenom & Nom</label>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-floating">
								<input type="email" value="{{contact.email}}" class="form-control" id="email" placeholder="Adresse Email">
								<label for="email">Email</label>
							</div>
						</div>
						<div class="col-12">
							<div class="form-floating">
								<input type="text" value="{{contact.sujet}}" class="form-control" id="subject" placeholder="Sujet">
								<label for="subject">Sujet</label>
							</div>
						</div>
						<div class="col-12">
							<div class="form-floating">
								<textarea class="form-control" placeholder="Donnez votre message ici" id="message" style="height: 150px">{{contact.texte}}</textarea>
								<label for="message">Message</label>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
