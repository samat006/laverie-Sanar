{% extends 'base.html.twig' %}

{% block title %}Modification Commande
{% endblock %}

{% block body %}
	<div class="container-xxl py-5 bg-dark hero-header">
		<div class="container text-center my-5 pt-5 pb-4">
			<h1 class="display-3 text-white mb-3 animated slideInDown">Compte</h1>
			<a href="/logout">
				<i class="fa fa-power-off fa-1x text-primary"></i>
			</a>
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb justify-content-center text-uppercase">
					<li class="breadcrumb-item">
						<a href="/">Acceuil</a>
					</li>
					{% if app.user %}
						<li class="breadcrumb-item text-white active" aria-current="page">{{app.user.prenom}}
							{{app.user.nom}}</li>
					{% endif %}
					<li class="breadcrumb-item text-white active" aria-current="page">Commandes</li>
				</ol>
				{% if app.user %}
					<p class="">{{app.user.email}}</p>
				{% endif %}
			</nav>
		</div>
	</div>

	<!-- Container Form Commandes Start -->
	<div class="container-xxl pb-5 px-0 wow fadeInUp" data-wow-delay="0.1s" id="">
		<div class="row g-0">
			<div class="col-lg-6 bg-dark d-flex align-items-center">
				<div class="p-5 col-12 wow fadeInUp" data-wow-delay="0.2s">
					<h5 class="section-title ff-secondary text-start text-primary fw-normal">Demandes</h5>
					<h1 class="text-white mb-4">votre commande</h1>
					<div class="row g-3">
						{{ form_start(form) }}
						{{ form_errors(form.date) }}
						{{ form_errors(form.article_id) }}
						{{ form_errors(form.statut) }}
						<div class="row justify-content-center align-items-center">
							<div class="col-md-6">
								<div class="form-floating date" id="date5" data-target-input="nearest">
									<input type="text" class="form-control datetimepicker-input" value="{{commande.date|date('d/m/Y h:m')}} AM" name="{{ field_name(form.date) }}" id="datetime" placeholder="Date & Heure" data-target="#date5" data-toggle="datetimepicker"/>
									<label for="datetime">Date & Heure</label>
								</div>
							</div>
							<div class="col-md-6 py-3">
								<div class="form-floating">
									<select class="form-select" id="select2" name="{{ field_name(form.article_id) }}">
										<option value="{{commande.articleid.id}}">{{commande.articleid}}
											{% for article in articles %}
												<option value="{{article.id}}">{{article.nom}}
												</option>
											{% endfor %}
										</option>
									</select>
									<label for="select2">Article</label>
								</div>
							</div>
						</div>
						<div class="col-md-12">
							<div class="form-floating">
								<select class="form-select" id="select1" name="{{ field_name(form.statut) }}">
									<option value="{{commande.statut}}">{{commande.statut}}</option>
									<option value="Non réglé">Non réglé</option>
									<option value="En traitement">En traitement</option>
									<option value="Réglé">Réglé</option>
								</select>
								<label for="select1">Statut</label>
							</div>
						</div>

						<div class="row justify-content-center align-items-center">
							<div class="col-lg-6  py-3">
								<button class="btn btn-primary w-100 py-3" type="submit">Modifier</button>
							</div>
							<div class="col-lg-6 text-center py-3">
								<a href="/compte">Annuler</a>
							</div>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>

			<div class="col-lg-6">
				<div class="imagelogin">
					<span></span>
				</div>
			</div>
		</div>
	</div>

	<!-- Container Form Commandes End -->

{% endblock %}
