{% extends 'base.html.twig' %}

{% block title %}Abonnement index{% endblock %}

{% block body %}
    <h1>Abonnement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Type</th>
                <th>Statut</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for abonnement in abonnements %}
            <tr>
                <td>{{ abonnement.id }}</td>
                <td>{{ abonnement.datedebut ? abonnement.datedebut|date('Y-m-d') : '' }}</td>
                <td>{{ abonnement.datefin ? abonnement.datefin|date('Y-m-d') : '' }}</td>
                <td>{{ abonnement.type }}</td>
                <td>{{ abonnement.statut }}</td>
                <td>{{ abonnement.prix }}</td>
                <td>
                    <a href="{{ path('app_abonnements_show', {'id': abonnement.id}) }}">show</a>
                    <a href="{{ path('app_abonnements_edit', {'id': abonnement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_abonnements_new') }}">Create new</a>
{% endblock %}
