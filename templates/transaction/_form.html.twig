<!-- Container Form transactions Start -->
<div class="container-xxl pb-5 px-0 wow fadeInUp" data-wow-delay="0.1s" id="">
	<div class="row g-0">
		<div class="col-lg-6 bg-dark d-flex align-items-center">
			<div class="p-5 col-12 wow fadeInUp" data-wow-delay="0.2s">
				<h5 class="section-title ff-secondary text-start text-primary fw-normal">Transaction</h5>
				<h1 class="text-white mb-4">Cr√©ation de transactions pour un client</h1>
				<div class="row g-3">
					{{ form_start(form) }}
					{{ form_errors(form) }}
					<div class="row justify-content-center align-items-center">
					<div class="col-lg-6 my-3">
						<div class="form-floating date" id="date5" data-target-input="nearest">
							<input type="text" class="form-control" name="{{ field_name(form.modepaiement) }}" id="paiement" placeholder="Paiement"/>
							<label for="modepaiement">Mode de paiement</label>
						</div>
					</div>
						<div class="col-lg-6 my-3">
							<div class="form-floating date" id="date5" data-target-input="nearest">
								<input type="number" class="form-control" name="{{ field_name(form.montant) }}" id="montant" placeholder="Montant"/>
								<label for="montant">Montant</label>
							</div>
						</div>
					</div>
					<div class="col-md-12 py-3">
						<div class="form-floating">
							<select class="form-select" id="select1" name="{{ field_name(form.commande_id) }}">
								{% for commande in commandes %}
									<option value="{{commande.id}}">{{commande}}
									</option>
								{% endfor %}
							</select>
							<label for="select1">Commandes</label>
						</div>
					</div>
					<div class="col-md-12 py-3">
						<div class="form-floating">
							<select class="form-select" id="select2" name="{{ field_name(form.client_id) }}">
								{% for client in clients %}
									<option value="{{client.id}}">{{client}}
									</option>
								{% endfor %}
							</select>
							<label for="select2">Clients</label>
						</div>
					</div>
					<div class="row justify-content-center align-items-center">
						<div class="col-lg-6  py-3">
							<button class="btn btn-primary w-100 py-3" type="submit">valider la transaction</button>
						</div>
						<div class="col-lg-6 text-center py-3">
							<a href="/compte">Annuler</a>
						</div>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>

		<div class="col-lg-6">
			<div class="imagelogin">
				<span></span>
			</div>
		</div>
	</div>
</div>

<!-- Container Form Transactions End -->
