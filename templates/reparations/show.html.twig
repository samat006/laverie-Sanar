{% extends 'base.html.twig' %}

{% block title %}Reparation
{% endblock %}

{% block body %}
	<div class="container-xxl py-5 bg-dark hero-header">
		<div class="container text-center my-5 pt-5 pb-4">
			<h1 class="display-3 text-white mb-3 animated slideInDown">Compte</h1>
			<a href="/logout">
				<i class="fa fa-power-off fa-1x text-primary"></i>
			</a>
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb justify-content-center text-uppercase">
					<li class="breadcrumb-item">
						<a href="/">Acceuil</a>
					</li>
					{% if app.user %}
						<li class="breadcrumb-item text-white active" aria-current="page">{{app.user.prenom}}
							{{app.user.nom}}</li>
					{% endif %}
					<li class="breadcrumb-item text-white active" aria-current="page">Réclamations</li>
				</ol>
				{% if app.user %}
					<p class="">{{app.user.email}}</p>
				{% endif %}
			</nav>
		</div>
	</div>


	<div class="container">
		<div class="col-lg-10">
			<h5 class="section-title ff-secondary text-start text-primary fw-normal">Réclamations
				<img src="{{ asset('assets/img/logo.png') }}" style="height:50px" alt="Logo"></h5>
			<h1 class="mb-4">Réclamation pour
				{{ reparation.date ? reparation.date|date('Y-m-d H:i:s') : 'une date non définie' }}</h1>
			<p class="mb-4">{{reparation.description ? reparation.description : "Réclamation non définie"}}</p>
			<div class="row g-4 mb-4">
				<div class="col-sm-6">
					<div class="d-flex align-items-center border-start border-5 border-primary px-3">
						<div class="ps-4">
							<p class="mb-0">Prix:
							</p>
							<h6 class="fw-normal mb-0 ff-secondary">{{ reparation.prix ? reparation.prix : "Non défini" }}</h6>
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="d-flex align-items-center border-start border-5 border-primary px-3">
						<div class="ps-4">
							<p class="mb-0">Statut:
							</p>
							<h6 class="mb-0 ff-secondary">{{ reparation.statut }}</h6>
						</div>
					</div>
				</div>
				{% if is_granted('ROLE_EMPLOYER') %}
					<div class="col-sm-6">
						<div class="d-flex align-items-center border-start border-5 border-primary px-3">
							<div class="ps-4">
								<p class="mb-0">Client:
								</p>
								<h6 class="mb-0 ff-secondary">{{ reparation.userid }}</h6>
							</div>
						</div>
					</div>
					<div class="col-sm-6">
						<div class="d-flex align-items-center border-start border-5 border-primary px-3">
							<div class="ps-4">
								<p class="mb-0">Date de Création:
								</p>
								<h6 class="mb-0 ff-secondary">{{ reparation.datecreate ? reparation.datecreate|date('Y-m-d H:i:s') : 'Non défini' }}</h6>
							</div>
						</div>
					</div>
					<div class="col-sm-6">
						<div class="d-flex align-items-center border-start border-5 border-primary px-3">
							<div class="ps-4">
								<p class="mb-0">Date de mise à jour:
								</p>
								<h6 class="mb-0 ff-secondary">{{ reparation.dateupdate ? abonnement.dateupdate|date('Y-m-d H:i:s') : 'Non défini' }}</h6>
							</div>
						</div>
					</div>

				{% endif %}
			</div>

			{{ include('reparations/_delete_form.html.twig') }}
		</div>
	</div>

{% endblock %}
